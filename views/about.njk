{%extends "layout.njk"%}

{% block head %}
  <title>Sobre - Rocketseat</title>
{% endblock %}

{% block content %}

  <div id="wrapper">
    <img src="{{ about.avatar_url }}" alt="{{ about.company }}"/>
    <h1>{{ about.company }}</h1>
    <h2>
      {{ about.description }}
    </h2>
    <h3>{{ about.main_techs }}</h3>
    {% for tech in about.techs %}
      <ul>
        <li>{{ tech.name }}</li>
      </ul>
    {% endfor %}
  </div>

  <div id="links-footer" class="links">
    {% for link in about.links %}
      <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
    {% endfor %}
  </div>

{% endblock %}